@model CharlieBackend.AdminPanel.Models.Homework.HomeworkViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="content-wrapper" class="d-flex flex-row  justify-content-center">

    <div class="container mt-3 col-5">

        <h1 class="h3 mb-2 text-gray-800">Edit homework</h1>

        <div class="card shadow mb-4">

            <div class="modal-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <input type="hidden" asp-for="Id" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label asp-for="DueDate" class="control-label"></label>
                        <input asp-for="DueDate" class="form-control" />
                        <span asp-validation-for="DueDate" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TaskText" class="control-label"></label>
                        <input asp-for="TaskText" class="form-control" />
                        <span asp-validation-for="TaskText" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="hidden" asp-for="LessonId" class="form-control" />
                        <span asp-validation-for="LessonId" class="text-danger"></span>
                    </div>
                    <div class="mt-3">
                        <a class="btn btn-secondary" asp-action="Index" asp-controller="Homeworks">Close</a>
                        <button type="submit" class="btn btn-primary">Save changes</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
