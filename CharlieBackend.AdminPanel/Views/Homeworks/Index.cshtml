<div id="content-wrapper" class="d-flex flex-column">

    <div id="content">

        <div class="fixed-bottom ml-4" style="left:90%; right:50%; bottom:8%;">
            <a asp-action="CreateHomework" asp-controller="Homeworks" class="btn btn-lg btn-success btn-circle">
                <i class="fas fa-plus"></i>
            </a>
        </div>

        <div class="container-fluid">

            <div class="card shadow mb-4">
                <div class="card-header py-3">
                    <div class="row">

                        <h6 class="m-2 font-weight-bold text-primary">Homeworks</h6>

                    </div>

                </div>

                <div class="card-body">
                    <div class="table-responsive p-3" style="overflow-x:unset">
                        <table class="table text-center table-hover" @*id="dataTable"*@ width="100%" cellspacing="0">
                            <thead>
                                <tr class="thead-dark row">
                                    <th class="col-4">Deadline</th>
                                    <th class="col-3">Task Text</th>
                                    <th class="col-3">Publishing Date</th>
                                    <th class="col">Controll</th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr class="row" @*id="activeMentorsRow"*@>
                                        <td class="col-4 text-truncate">@item.DueDate</td>
                                        <td class="col-3 text-truncate">@item.TaskText</td>
                                        <td class="col-3 text-truncate">@item.PublishingDate</td>
                                        <td class="col">
                                            <div class="dropdown">
                                                <button class="btn btn-outline-secondar dropdown-toggle"
                                                        type="button" id="dropdownMenuButton" data-toggle="dropdown"
                                                        aria-haspopup="true" aria-expanded="false">
                                                    <i class="fas fa-cog"></i>
                                                </button>
                                                <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">

                                                    <a class=" dropdown-item" asp-action="PrepareHomeworkForUpdate" asp-controller="Homeworks" asp-route-id="@item.Id">
                                                        <i class="fas fa-pen"></i>
                                                        <span>Edit </span>
                                                    </a>

                                                    <a class="dropdown-item text-dark js-delete-homework" data-toggle="modal" data-target="#deleteHomeworkModalWindow" data-item-id="@item.Id">
                                                        <i class="fas fa-pen"></i>
                                                        <span>Delete </span>
                                                    </a>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete event occurrence modal window-->
<div class="modal fade" id="deleteHomeworkModalWindow" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Delete homework?</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                <a class="btn btn-primary" id="confirmDeleteHomework" href="">Confirm</a>
            </div>
        </div>
    </div>
</div>


@section Scripts{

    <script type="text/javascript">
        var routeForDeleteHomework = "/Homework/DeleteHomework/";

        var deleteHomeworkId = null;

        $(document).on("click", ".js-delete-homework", function (e) {

            e.preventDefault();

            var _self = $(this);

            deleteHomeworkId = _self.data('item-id');

            $("#confirmDeleteHomework").attr("href", routeForDeleteHomework + deleteHomeworkId);

        });
    </script>
}