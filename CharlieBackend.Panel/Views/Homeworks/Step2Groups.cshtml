@model IEnumerable<CharlieBackend.AdminPanel.Models.StudentGroups.StudentGroupViewModel>

@{
    Layout = "_Layout";
}


<div id="content-wrapper" class="d-flex flex-row  justify-content-center">

    <div class="container mt-3 col-5">

        <h1 class="h3 mb-2 text-gray-800">Step 2: Please choose group</h1>

        <div class="card shadow mb-4">

            <div class="modal-body">

                <form method="get" asp-action="SelectLessonId" asp-controller="Homeworks">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <table class="table">
                        <thead>
                            <tr>
                                <th>
                                    <span>Groups</span>
                                </th>

                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <a class=" dropdown-item" asp-action="SelectLessonId" asp-controller="Homeworks" asp-route-stGroupId="@item.Id">
                                            <span>@Html.DisplayFor(modelItem => item.Name)</span>
                                        </a>
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>

                    <div class="mt-3">
                        <a class="btn btn-secondary" asp-action="Index" asp-controller="Homeworks">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
